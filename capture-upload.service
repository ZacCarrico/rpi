[Unit]
Description=Camera Capture and Upload Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=rpi
WorkingDirectory=/home/rpi
ExecStart=/home/rpi/capture_and_upload.sh
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

# Resource limits to prevent system exhaustion
MemoryMax=200M
CPUQuota=50%

[Install]
WantedBy=multi-user.target
